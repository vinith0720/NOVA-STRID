{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routers/*": ["routers/*"],
      "@dto/*": ["dto/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules"]
}
